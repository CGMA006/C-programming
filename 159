#include <stdio.h>
int main() {
    int x = 2;
    
    switch (x + 1) {
        case 1:
            printf("x + 1 equals 1\n");
            break;
        case 2:
            printf("x + 1 equals 2\n");
            break;
        case 3:
            printf("x + 1 equals 3\n");
            break;
        default:
            printf("Expression doesn't match any case\n");
    }
    
    return 0;
}
